<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="?attr/dialogPreferredPadding">

  <androidx.appcompat.widget.SwitchCompat
      android:text="@string/editor_dialog_prediction_enable"
      android:id="@+id/editor_dialog_prediction_toggle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView
      android:id="@+id/editor_dialog_prediction_duration_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="8dp"
      android:text="@string/editor_dialog_prediction_duration" />

  <androidx.appcompat.widget.AppCompatSeekBar
      android:id="@+id/editor_dialog_prediction_duration"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:max="200"
      tools:progress="16" />
</LinearLayout>
